}

.combatant-header {
  font-size: 0.75rem;
  color: #95a5a6;
  text-transform: uppercase;
  margin-bottom: 0.5rem;
  letter-spacing: 1px;
}

.combatant.challenger .combatant-header {
  color: #e74c3c;
}

.combatant.defender .combatant-header {
  color: #3498db;
}

.combatant-name {
  font-size: 1.125rem;
  font-weight: bold;
  color: #ecf0f1;
  margin-bottom: 0.25rem;
}

.combatant-dice {
