<div class="contest-result-card">
  <div class="contest-header">
    <h3>拼点结果</h3>
  </div>

  <div class="contest-combatants">
    {{!-- 挑战者 --}}
    <div class="combatant challenger">
      <div class="combatant-header">
        <i class="fas fa-sword"></i> 挑战者
      </div>
      <div class="combatant-name">{{challengerName}}</div>
      <div class="combatant-dice">{{challengerDiceName}}</div>
      <div class="combatant-total">{{challengerTotal}}</div>
    </div>

    {{!-- VS --}}
    <div class="vs-divider">
      <span>VS</span>
    </div>

    {{!-- 对抗者 --}}
    <div class="combatant defender">
      <div class="combatant-header">
        <i class="fas fa-shield"></i> 对抗者
      </div>
      <div class="combatant-name">{{actor.name}}</div>
      <div class="combatant-dice">{{diceName}}</div>
      <div class="combatant-total">{{myTotal}}</div>
    </div>
  </div>

  {{!-- 结果 --}}
  <div class="contest-result">
    <div class="result-text">{{{resultMessage}}}</div>
    {{#if damageTarget}}
      <div class="damage-info">
        <span class="damage-target">{{damageTarget.name}}</span>
        受到
        <span class="damage-amount">{{damageAmount}}</span>
        点伤害！
        <br>
        <small>当前生命值：{{damageTarget.system.derived.hp.value}}/{{damageTarget.system.derived.hp.max}}</small>
      </div>
    {{/if}}
  </div>
</div>

<style>
