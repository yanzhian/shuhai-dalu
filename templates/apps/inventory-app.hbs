<div class="inventory-app-container">
  {{!-- 顶部工具栏 --}}
  <div class="inventory-toolbar">
    <div class="toolbar-left">
      <div class="search-box">
        <i class="fas fa-search"></i>
        <input type="text" class="search-input" placeholder="搜索物品..." value="{{searchTerm}}" />
      </div>
    </div>

    <div class="toolbar-center">
      <button class="toolbar-btn create-item-btn" type="button">
        <i class="fas fa-plus-circle"></i>
        <span>创建物品</span>
      </button>
    </div>

    <div class="toolbar-right">
      <div class="filter-group">
        <label>类型筛选:</label>
        <button class="filter-btn filter-type-btn" data-type="combatDice" type="button">攻击骰</button>
        <button class="filter-btn filter-type-btn" data-type="shootDice" type="button">射击骰</button>
        <button class="filter-btn filter-type-btn" data-type="defenseDice" type="button">守备骰</button>
        <button class="filter-btn filter-type-btn" data-type="weapon" type="button">武器</button>
        <button class="filter-btn filter-type-btn" data-type="armor" type="button">防具</button>
        <button class="filter-btn filter-type-btn" data-type="equipment" type="button">装备</button>
      </div>

      <div class="filter-group">
        <label>费用筛选:</label>
        <button class="filter-btn filter-cost-btn" data-cost="free" type="button">免费</button>
        <button class="filter-btn filter-cost-btn" data-cost="currency" type="button">货币</button>
        <button class="filter-btn filter-cost-btn" data-cost="special" type="button">特殊</button>
      </div>

      <div class="filter-group">
        <label>星光筛选:</label>
        <button class="filter-btn filter-starlight-btn" data-starlight="none" type="button">无消耗</button>
        <button class="filter-btn filter-starlight-btn" data-starlight="has" type="button">有消耗</button>
      </div>

      <button class="toolbar-btn clear-filters-btn" type="button">
        <i class="fas fa-times-circle"></i>
        <span>清除筛选</span>
      </button>
    </div>
  </div>

  {{!-- 物品列表表头（固定） --}}
  <div class="inventory-header">
    <div class="header-cell col-icon">图标</div>
    <div class="header-cell col-name">名称</div>
    <div class="header-cell col-type">类型</div>
    <div class="header-cell col-category">分类</div>
    <div class="header-cell col-dice">骰数</div>
    <div class="header-cell col-cost">费用</div>
    <div class="header-cell col-quantity">数量</div>
    <div class="header-cell col-starlight">星光</div>
  </div>

  {{!-- 物品列表内容（可滚动） --}}
  <div class="inventory-content">
    {{#if items}}
      {{#each items as |itemData|}}
      <div class="inventory-row"
           data-item-id="{{itemData.id}}"
           data-item-type="{{itemData.type}}"
           draggable="true">

        {{!-- 图标 --}}
        <div class="item-cell col-icon">
          <img src="{{itemData.img}}"
               class="item-icon"
               title="{{itemData.effect}}"
               alt="{{itemData.name}}"/>
        </div>

        {{!-- 名称 --}}
        <div class="item-cell col-name item-name-cell">{{itemData.name}}</div>

        {{!-- 类型 --}}
        <div class="item-cell col-type">{{itemData.typeLabel}}</div>

        {{!-- 分类 --}}
        <div class="item-cell col-category">{{itemData.category}}</div>

        {{!-- 骰数 --}}
        <div class="item-cell col-dice">{{itemData.diceFormula}}</div>

        {{!-- 费用 --}}
        <div class="item-cell col-cost">{{itemData.cost}}</div>

        {{!-- 数量 --}}
        <div class="item-cell col-quantity">{{itemData.quantity}}</div>

        {{!-- 星光 --}}
        <div class="item-cell col-starlight">
          {{#if itemData.starlightCost}}
            {{itemData.starlightCost}}
          {{else}}
            -
          {{/if}}
        </div>
      </div>
      {{/each}}
    {{else}}
      <div class="no-items">
        <p>没有找到物品</p>
      </div>
    {{/if}}
  </div>
</div>

<style>
.inventory-app-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #1e1e1e;
  color: #e0e0e0;
}

/* 工具栏 */
.inventory-toolbar {
  display: flex;
  gap: 1rem;
  padding: 1rem;
  background: #2a2a2a;
  border-bottom: 2px solid #3a3a3a;
  flex-wrap: wrap;
}

.toolbar-left,
.toolbar-center,
.toolbar-right {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.toolbar-right {
  flex-direction: column;
  align-items: flex-start;
  gap: 0.5rem;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: #333;
  border-radius: 4px;
  border: 1px solid #4a4a4a;
}

.search-box i {
  color: #999;
}

.search-input {
  background: transparent;
  border: none;
  color: #e0e0e0;
  outline: none;
  width: 200px;
}

.toolbar-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: #3498db;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-weight: bold;
  transition: background 0.2s;
}

.toolbar-btn:hover {
  background: #2980b9;
}

.clear-filters-btn {
  background: #e74c3c;
}

.clear-filters-btn:hover {
  background: #c0392b;
}

.filter-group {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.filter-group label {
  color: #999;
  font-size: 0.875rem;
  white-space: nowrap;
}

.filter-btn {
  padding: 0.25rem 0.75rem;
  background: #3a3a3a;
  color: #e0e0e0;
  border: 1px solid #4a4a4a;
  border-radius: 4px;
  cursor: pointer;
  font-size: 0.875rem;
  transition: all 0.2s;
}

.filter-btn:hover {
  background: #4a4a4a;
}

.filter-btn.active {
  background: #3498db;
  border-color: #3498db;
  color: white;
}

/* 表头 */
.inventory-header {
  display: grid;
  grid-template-columns: 60px 2fr 1fr 1fr 1fr 1fr 80px 80px;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: #2a2a2a;
  border-bottom: 2px solid #3a3a3a;
  font-weight: bold;
  color: #bbb;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-cell {
  text-align: center;
}

/* 内容区域 */
.inventory-content {
  flex: 1;
  overflow-y: auto;
  padding: 0.5rem;
}

.inventory-row {
  display: grid;
  grid-template-columns: 60px 2fr 1fr 1fr 1fr 1fr 80px 80px;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: #2a2a2a;
  border-radius: 4px;
  margin-bottom: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
}

.inventory-row:hover {
  background: #333;
  transform: translateX(4px);
}

.item-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.col-icon {
  justify-content: flex-start;
}

.col-name {
  justify-content: flex-start;
}

.item-icon {
  width: 50px;
  height: 50px;
  border-radius: 4px;
  border: 2px solid #4a4a4a;
  cursor: pointer;
  transition: transform 0.2s;
}

.item-icon:hover {
  transform: scale(1.1);
  border-color: #3498db;
}

.item-name-cell {
  font-weight: bold;
  color: #3498db;
  cursor: pointer;
}

.item-name-cell:hover {
  text-decoration: underline;
}

.no-items {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 3rem;
  color: #999;
}

.no-items p {
  font-size: 1.25rem;
}

/* 滚动条样式 */
.inventory-content::-webkit-scrollbar {
  width: 8px;
}

.inventory-content::-webkit-scrollbar-track {
  background: #1e1e1e;
}

.inventory-content::-webkit-scrollbar-thumb {
  background: #4a4a4a;
  border-radius: 4px;
}

.inventory-content::-webkit-scrollbar-thumb:hover {
  background: #555;
}
</style>
