<div class="create-item-dialog">
  <div class="form-group">
    <label>名称</label>
    <input type="text" name="name" value="新物品" placeholder="输入物品名称"/>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label>类型</label>
      <select name="type">
        <option value="combatDice">攻击骰</option>
        <option value="shootDice">射击骰</option>
        <option value="defenseDice">守备骰</option>
        <option value="triggerDice">触发骰</option>
        <option value="passiveDice">被动骰</option>
        <option value="weapon">武器</option>
        <option value="armor">防具</option>
        <option value="item">物品</option>
        <option value="equipment">装备</option>
      </select>
    </div>

    <div class="form-group">
      <label>分类</label>
      <input type="text" name="category" placeholder="例如：消耗品、工具等"/>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label>骰数</label>
      <input type="text" name="diceFormula" placeholder="例如：1d6+2"/>
    </div>

    <div class="form-group">
      <label>费用</label>
      <input type="number" name="cost" value="0" min="0"/>
    </div>

    <div class="form-group">
      <label>数量</label>
      <input type="number" name="quantity" value="1" min="1"/>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label>星光消耗</label>
      <input type="number" name="starlightCost" value="0" min="0"/>
    </div>

    <div class="form-group">
      <label>防具抗性</label>
      <input type="text" name="resistance" placeholder="例如：火焰、寒冷等"/>
    </div>
  </div>

  <div class="form-group">
    <label>标签</label>
    <input type="text" name="tags" placeholder="用逗号分隔多个标签"/>
  </div>

  <div class="form-group">
    <label>描述</label>
    <textarea name="description" rows="4" placeholder="输入物品描述..."></textarea>
  </div>

  <div class="form-group">
    <label>额外属性/特性</label>
    <textarea name="properties" rows="3" placeholder="输入额外属性或特性..."></textarea>
  </div>
</div>

<style>
