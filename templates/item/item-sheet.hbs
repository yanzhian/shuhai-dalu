<form class="{{cssClass}} flexcol" autocomplete="off">
  {{!-- 物品头部 --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" width="100" height="100"/>
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="物品名称"/>
      </h1>
      <div class="item-subtitle">
        <span class="item-type">{{item.type}}</span>
      </div>
    </div>
  </header>

  {{!-- 物品属性 --}}
  <div class="sheet-body">
    {{!-- 基础属性 --}}
    <div class="form-group">
      <label>分类</label>
      {{#if allowCustomCategory}}
      <input type="text" name="system.category" value="{{system.category}}" placeholder="例如: 太刀, 弓箭, 藤甲, 子弹..."/>
      <p class="hint">可以自由填写物品分类</p>
      {{else}}
      <select name="system.category">
        {{#each categories as |cat|}}
        <option value="{{cat.value}}" {{#if (eq ../system.category cat.value)}}selected{{/if}}>
          {{cat.label}}
        </option>
        {{/each}}
      </select>
      {{/if}}
    </div>

    {{#if showDiceFormula}}
    <div class="form-group">
      <label>骰数</label>
      <input type="text" name="system.diceFormula" value="{{system.diceFormula}}" placeholder="例如: 1d6+3"/>
      <p class="hint">支持格式: 1d6+3, 2d4, 1d8+2, 或 ★ ▼ O 等特殊符号</p>
    </div>
    {{/if}}

    <div class="form-group">
      <label>费用</label>
      <input type="text" name="system.cost" value="{{system.cost}}" placeholder="例如: 10, Cost:50, San:3, -"/>
      <p class="hint">格式: 数字、Cost:数字、San:数字、或 - 表示无消耗</p>
    </div>

    {{#if showQuantity}}
    <div class="form-group">
      <label>数量</label>
      <input type="number" name="system.quantity" value="{{system.quantity}}" data-dtype="Number" min="0"/>
    </div>
    {{/if}}

    {{#if showStarlightCost}}
    <div class="form-group">
      <label>星光消耗</label>
      <input type="number" name="system.starlightCost" value="{{system.starlightCost}}" data-dtype="Number" min="0"/>
      <p class="hint">装备时消耗的星光数量</p>
    </div>
    {{/if}}

    <div class="form-group">
      <label>标签</label>
      <input type="text" name="system.tags" value="{{system.tags}}" placeholder="用逗号分隔多个标签"/>
    </div>

    {{!-- 防具属性 --}}
    {{#if showArmorProperties}}
    <div class="form-group armor-properties">
      <label>防具属性</label>
      <div class="properties-grid">
        <label class="checkbox-label">
          <input type="checkbox" name="system.armorProperties.slashUp" {{#if system.armorProperties.slashUp}}checked{{/if}}/>
          <span class="resist">斩击↑</span>
        </label>
        <label class="checkbox-label">
          <input type="checkbox" name="system.armorProperties.pierceUp" {{#if system.armorProperties.pierceUp}}checked{{/if}}/>
          <span class="resist">突刺↑</span>
        </label>
        <label class="checkbox-label">
          <input type="checkbox" name="system.armorProperties.bluntUp" {{#if system.armorProperties.bluntUp}}checked{{/if}}/>
          <span class="resist">打击↑</span>
        </label>
        <label class="checkbox-label">
          <input type="checkbox" name="system.armorProperties.slashDown" {{#if system.armorProperties.slashDown}}checked{{/if}}/>
          <span class="weak">斩击↓</span>
        </label>
        <label class="checkbox-label">
          <input type="checkbox" name="system.armorProperties.pierceDown" {{#if system.armorProperties.pierceDown}}checked{{/if}}/>
          <span class="weak">突刺↓</span>
        </label>
        <label class="checkbox-label">
          <input type="checkbox" name="system.armorProperties.bluntDown" {{#if system.armorProperties.bluntDown}}checked{{/if}}/>
          <span class="weak">打击↓</span>
        </label>
      </div>
    </div>
    {{/if}}

    {{!-- 效果描述 --}}
    <div class="form-group description">
      <label>效果描述</label>
      {{editor enrichedEffect target="system.effect" button=true owner=owner editable=editable}}
    </div>

    {{!-- 操作按钮 --}}
    <div class="form-group actions">
      <button type="button" class="item-use">
        <i class="fas fa-play"></i> 使用
      </button>
      <button type="button" class="item-chat">
        <i class="fas fa-comment"></i> 发送到聊天
      </button>
    </div>
  </div>
</form>

