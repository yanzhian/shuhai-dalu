<div class="shuhai-item-details">
  <div class="item-header">
    <img src="{{item.img}}" width="80" height="80"/>
    <div class="header-info">
      <h2>{{item.name}}</h2>
      <div class="item-meta">
        <span class="badge type">{{item.type}}</span>
        <span class="badge category">{{system.category}}</span>
      </div>
    </div>
  </div>
  
  <div class="item-stats">
    {{#if system.diceFormula}}
    <div class="stat-row">
      <label>骰数:</label>
      <span class="value formula">{{system.diceFormula}}</span>
    </div>
    {{/if}}
    
    {{#if system.cost}}
    <div class="stat-row">
      <label>费用:</label>
      <span class="value">{{system.cost}}</span>
    </div>
    {{/if}}
    
    {{#if system.starlightCost}}
    <div class="stat-row">
      <label>星光消耗:</label>
      <span class="value starlight">{{system.starlightCost}} ⭐</span>
    </div>
    {{/if}}
    
    {{#if system.quantity}}
    <div class="stat-row">
      <label>数量:</label>
      <span class="value">{{system.quantity}}</span>
    </div>
    {{/if}}
  </div>
  
  {{#if system.tags}}
  <div class="item-tags">
    <label>标签:</label>
    <div class="tags-list">
      {{system.tags}}
    </div>
  </div>
  {{/if}}
  
  {{#if system.effect}}
  <div class="item-description">
    <label>描述:</label>
    <div class="description-content">
      {{{system.effect}}}
    </div>
  </div>
  {{/if}}
  
  {{#if (eq item.type "armor")}}
  {{#if system.armorProperties}}
  <div class="armor-properties">
    <label>防具属性:</label>
    <div class="properties-grid">
      {{#if system.armorProperties.slashUp}}<span class="prop resist">斩击↑</span>{{/if}}
      {{#if system.armorProperties.pierceUp}}<span class="prop resist">突刺↑</span>{{/if}}
      {{#if system.armorProperties.bluntUp}}<span class="prop resist">打击↑</span>{{/if}}
      {{#if system.armorProperties.slashDown}}<span class="prop weak">斩击↓</span>{{/if}}
      {{#if system.armorProperties.pierceDown}}<span class="prop weak">突刺↓</span>{{/if}}
      {{#if system.armorProperties.bluntDown}}<span class="prop weak">打击↓</span>{{/if}}
    </div>
  </div>
  {{/if}}
  {{/if}}
</div>

